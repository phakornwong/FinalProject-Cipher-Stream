@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: calc(100vh - 60px); 
        margin-top: 60px;
    }

    .register-box {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
        max-width: 600px; 
        width: 100%;
        box-sizing: border-box;
    }

    .register-form {
        max-width: 300px;
        margin-right: 20px;
    }

    .register-logo {
        width: 150px;
        height: auto;
    }

    h3 {
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<div class="register-wrapper">
    <div class="register-box">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form">
            <h3>@ViewData["Title"]</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <table>
                <tr>
                    <td>FirstName</td>
                    <td>
                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="form" autocomplete="firstname" aria-required="true"/>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>LastName</td>
                    <td>
                        <div class="form-floating">
                            <input asp-for="Input.LastName" class="form" autocomplete="lastname" aria-required="true" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Mobile Phone</td>
                    <td>
                        <div class="form-floating">
                            <input asp-for="Input.MobilePhone" class="form" autocomplete="mobilephone" aria-required="true" />
                            <span asp-validation-for="Input.MobilePhone" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Username</td>
                    <td>
                        <div class="form-floating">
                            <input asp-for="Input.UserName" class="form" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                    </td>
                </tr>
            </table>
        </form>
        <img src="~/images/BU_LOGO1.png" alt="Logo" class="register-logo">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
